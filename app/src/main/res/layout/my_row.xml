<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:outlineSpotShadowColor="@color/purple_700"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="414dp"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:outlineAmbientShadowColor="@color/purple_700"
        android:outlineSpotShadowColor="@color/black"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/comicID"
        android:layout_width="49dp"
        android:layout_height="115dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="55dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/comicDateOfAcqTXT"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comicDateOfAcqTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Date"
        android:textColor="@color/purple_500"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/comicDescrip"
        app:layout_constraintStart_toEndOf="@+id/comicCategory"
        app:layout_constraintTop_toBottomOf="@+id/TXTComicName" />

    <TextView
        android:id="@+id/comicDescrip"
        android:layout_width="324dp"
        android:layout_height="84dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="7dp"
        android:text="Description"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comicID"
        app:layout_constraintTop_toBottomOf="@+id/comicDateOfAcqTXT" />

    <TextView
        android:id="@+id/comicCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:outlineSpotShadowColor="@color/purple_500"
        android:text="Category"
        android:textSize="16dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/comicDescrip"
        app:layout_constraintStart_toEndOf="@+id/comicID"
        app:layout_constraintTop_toBottomOf="@+id/TXTComicName" />

    <TextView
        android:id="@+id/TXTComicName"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="3dp"
        android:text="Name"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/comicDateOfAcqTXT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toEndOf="@+id/comicID"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>